						"body": {
							"mode": "raw",
							"raw": "{\n  \"message\": \"Tell me more about that city\",\n  \"context\": {\n    \"threadId\": \"thread_abc123\",\n    \"agentId\": \"agent_xyz789\"\n  }\n}",
